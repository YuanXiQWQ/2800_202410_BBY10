<%- include("templates/header") %>
<head>
    <title><%= language.logInTitle %></title>
    <link rel="stylesheet" href="/styles/login.css">
</head>
<div class="form-container">
    <form id="login-form">
        <div class="mb-3">
            <label for="email" class="form-label">
                <%= language.email %>:
            </label>
            <input type="email" required class="form-control" id="email" name="email" placeholder="Enter your email">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">
                <%= language.password %>:
            </label>
            <input required type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn-primary">
            <%= language.signIn %>
        </button>
    </form>
    <a href="/forget-password"><%= language.forgetYourPassword %></a>
</div>
<div id="status-message"></div>
<%- include("templates/footer") %>

<script>
    const passwordRegex = /^(?=.*[a-zA-Z])(?=.*[0-9])[A-Za-z0-9@#*_]{5,25}$/;
    const passwordInvalidMessage = '<%= language.passwordInvalidMessage %>';

    document.getElementById('login-form').addEventListener('submit', async function (e) {
        e.preventDefault();
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const statusMessage = document.getElementById('status-message');

        statusMessage.style.visibility = 'hidden';
        statusMessage.textContent = '';

        if (!email || !password) {
            statusMessage.innerHTML = '<%= language.enterEmailAndPassword %>';
            statusMessage.style.visibility = 'visible';
            statusMessage.style.color = 'orange';
        } else if (!passwordRegex.test(password)) {
            statusMessage.innerHTML = passwordInvalidMessage;
            statusMessage.style.visibility = 'visible';
            statusMessage.style.color = 'red';
        } else {
            try {
                const response = await fetch('/logging-in', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({email, password})
                });
                const data = await response.json();
                if (data.success) {
                    window.location.href = '/exercises';
                } else {
                    statusMessage.style.visibility = 'visible';
                    statusMessage.style.color = 'red';
                    statusMessage.innerHTML = data.message;
                }
            } catch (err) {
                statusMessage.style.visibility = 'visible';
                statusMessage.style.color = 'red';
                statusMessage.innerHTML = '<%= language.errorOccurred %>' + err;
            }
        }
    });
</script>
