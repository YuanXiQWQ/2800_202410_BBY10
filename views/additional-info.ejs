<%- include("templates/header") %>
<h1>Additional Information</h1>
<form action="/submitAdditionalInfo" method="POST">
    <label for="weight">Weight:</label>
    <input type="text" id="weight" name="weight" required><br><br>

    <label for="height">Height:</label>
    <input type="text" id="height" name="height" required><br><br>

    <label for="workoutLevel">Workout Level:</label>
    <select id="workoutLevel" name="workoutLevel" required>
        <option value="beginner">Beginner</option>
        <option value="intermediate">Intermediate</option>
        <option value="advanced">Advanced</option>
    </select><br><br>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include("templates/footer") %>